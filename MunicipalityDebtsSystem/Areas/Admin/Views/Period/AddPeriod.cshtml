@using MunicipalityDebtsSystem.Areas.Admin.Models

@model AddPeriodViewModel;


@{
    ViewData["Title"] = "Отключване на период";
    
}

<div class="d-flex justify-content-between align-items-center mb-3 smart-title " style="margin-top: 20px;">
<h2>@ViewData["Title"]</h2>
</div>
<hr />




<div class="row " >
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddPeriod" method="post" enctype="multipart/form-data">
            @* <input type="hidden" asp-for="@Model.MunicipalityId" /> *@
           @*  <input type="hidden" asp-for="@Model.UserCreated" /> *@
            @* <input type="hidden" asp-for="@Model.DateCreated" /> *@

            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.MunicipalityId" class="form-label-add-edit">Община:</label>
               
                    <select asp-for="@Model.MunicipalityId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Municipalities, "MunicipalityId", "MunicipalityName"))">
                    <option value="0">-- Изберете</option>
                </select>
                <span asp-validation-for="@Model.MunicipalityId" class="text-danger"></span>
            </div>
            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.MonthInt" class="form-label-add-edit">Месец:</label>

              <select asp-for="@Model.MonthInt" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Months, "MonthInt", "MonthName"))">
                  <option value="0">-- Изберете</option>
              </select>
                <span asp-validation-for="@Model.MonthInt" class="text-danger"></span>

            </div>

            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.YearInt" class="form-label-add-edit">Година:</label>

                <select asp-for="@Model.YearInt" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Years, "YearInt", "YearName"))">
                    <option value="0">-- Изберете</option>
                </select>
                <span asp-validation-for="@Model.YearInt" class="text-danger"></span>

            </div>


            
         

            <div class="mb-2">
                <input class="btn btn-primary btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Отключи" />
            </div>
        </form>
    </div>
</div>


<style>
    .smart-title {
        font-family: 'Segoe UI', sans-serif;
        font-size: 2.5rem;
        font-weight: 600;
        color: #4A90E2; /* Soft Blue */
        background: linear-gradient(135deg, #4A90E2, #5C6BC0); /* Soft Blue Gradient */
        -webkit-background-clip: text;
        background-clip: text;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.15);
        letter-spacing: 1px;
        display: inline-block;
        padding-bottom: 5px;
        transition: all 0.3s ease-in-out;
    }

        .smart-title:hover {
            color: #fff;
            transform: scale(1.05);
        }

    .card-body {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

   

</style>



